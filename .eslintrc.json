{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "globals": {
        "__uri": true
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 8,
        "sourceType": "module"
    },
    "extends": "vue",
    "plugins": [
        "html",
        "vue"
    ],
    "rules": {
        "spaced-comment": [2, "always", {
            "exceptions": ["<release>", "</release>", "<debug>", "</debug>", "<test>", "</test>"]
        }],
        "semi": ["error", "always"],
        "comma-dangle": [2, "always-multiline"],
        "indent": ["error", 4]
    }
}